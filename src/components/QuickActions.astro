---
/**
 * QuickActions component - displays quick action tiles on the homepage
 */

const actions = [
  {
    title: 'Subscribe',
    description: 'Get the mods on Steam Workshop',
    icon: 'ğŸ®',
    href: 'https://steamcommunity.com/sharedfiles/filedetails/?id=3628222709',
    external: true,
    primary: true,
  },
  {
    title: 'Install Guide',
    description: 'Step-by-step installation help',
    icon: 'ğŸ“¥',
    href: `${import.meta.env.BASE_URL}/docs/`,
    external: false,
  },
  {
    title: 'Report a Bug',
    description: 'Found an issue? Let us know',
    icon: 'ğŸ›',
    href: 'https://github.com/TajemnikTV/TajsMod/issues/new',
    external: true,
  },
  {
    title: 'View Docs',
    description: 'Full documentation and guides',
    icon: 'ğŸ“š',
    href: `${import.meta.env.BASE_URL}/docs/`,
    external: false,
  },
  {
    title: 'Join Discord',
    description: 'Chat with the community',
    icon: 'ğŸ’¬',
    href: 'https://discord.gg/enigmadev',
    external: true,
  },
  {
    title: 'Support',
    description: 'Get help and support options',
    icon: 'ğŸ’™',
    href: `${import.meta.env.BASE_URL}/support/`,
    external: false,
  },
];
---

<section class="section bg-gray-50 dark:bg-dark-950">
  <div class="container-wide">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Quick Actions</h2>
      <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Get started quickly with these common actions
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
      {actions.map(action => (
        <a 
          href={action.href}
          target={action.external ? '_blank' : undefined}
          rel={action.external ? 'noopener noreferrer' : undefined}
          class:list={[
            'card-interactive p-4 text-center group',
            action.primary && 'ring-2 ring-accent-500/50 bg-accent-500/5'
          ]}
        >
          <span class="text-3xl mb-3 block group-hover:scale-110 transition-transform">
            {action.icon}
          </span>
          <h3 class="font-semibold text-sm mb-1">{action.title}</h3>
          <p class="text-xs text-gray-500 dark:text-gray-400 line-clamp-2">
            {action.description}
          </p>
          {action.external && (
            <svg class="w-3 h-3 inline-block ml-1 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          )}
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
