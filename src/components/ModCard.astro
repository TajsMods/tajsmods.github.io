---
/**
 * ModCard component - displays a mod card with key information
 * Used on homepage (featured mods) and /mods directory
 */
import type { Mod } from '../data/mods';
import { statusConfig } from '../data/mods';

interface Props {
  mod: Mod;
  variant?: 'default' | 'featured';
}

const { mod, variant = 'default' } = Astro.props;
const status = statusConfig[mod.status];

// Get primary links
const steamLink = mod.links.find(l => l.type === 'steam');
const githubLink = mod.links.find(l => l.type === 'github');
const docsLink = mod.links.find(l => l.type === 'docs');

const cardClass = variant === 'featured' 
  ? 'card-interactive p-6 md:p-8 bg-gradient-to-br from-white to-gray-50 dark:from-dark-800 dark:to-dark-900'
  : 'card-interactive p-5';
---

<article class={cardClass}>
  <!-- Header: Logo + Title + Status -->
  <div class="flex items-start gap-4 mb-4">
    {mod.logo && (
      <img 
        src={`${import.meta.env.BASE_URL}${mod.logo}`}
        alt={`${mod.name} logo`}
        class="w-12 h-12 md:w-14 md:h-14 rounded-xl shadow-sm flex-shrink-0"
        loading="lazy"
      />
    )}
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 flex-wrap">
        <h3 class="text-lg md:text-xl font-bold truncate">{mod.name}</h3>
        <span class={`px-2 py-0.5 text-xs font-medium rounded-full ${status.bgClass}`}>
          {status.label}
        </span>
      </div>
      {mod.version && (
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-0.5">v{mod.version}</p>
      )}
    </div>
  </div>

  <!-- Description -->
  <p class="text-gray-600 dark:text-gray-300 text-sm md:text-base mb-4 line-clamp-2">
    {mod.shortDescription}
  </p>

  <!-- Tags -->
  <div class="flex flex-wrap gap-2 mb-5">
    {mod.tags.slice(0, 4).map(tag => (
      <span class="chip text-xs">
        {tag}
      </span>
    ))}
  </div>

  <!-- Actions -->
  <div class="flex flex-wrap gap-2">
    <a 
      href={`${import.meta.env.BASE_URL}/mods/${mod.slug}/`}
      class="btn-primary text-sm py-2 px-4"
    >
      View Details
    </a>
    {steamLink && (
      <a 
        href={steamLink.url}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-secondary text-sm py-2 px-4"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15H8v-3h2V9.5C10 7.57 11.57 6 13.5 6H16v3h-2c-.55 0-1 .45-1 1v2h3v3h-3v6.95c5.05-.5 9-4.76 9-9.95 0-5.52-4.48-10-10-10z"></path>
        </svg>
        Subscribe
      </a>
    )}
    {githubLink && variant === 'featured' && (
      <a 
        href={githubLink.url}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-secondary text-sm py-2 px-4"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
        </svg>
        GitHub
      </a>
    )}
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
